<section>
  <div class="container">
    <div class="row mt-4">
      
    </div>
    <table class="table">
      <thead>
        <tr>
         <th scope="col">No</th>
          <th scope="col">Name</th>
          <td>Price</td>
          <th scope="col">Feature</th>
          <th>Image</th>
          <th>Edit/Delete</th>
        </tr>
      </thead>
      <tbody>
        {{#each cars}}
        <tr>
         <th scope="row">1</th>
          <td>{{this.Name}}</td>
          <td>{{this.Price}}</td>
          <td>{{this.Features}}</td>
          <td><img style="width: 60px; height: 50px;" src="/images/{{this._id}}.jpg" alt=""></td>
          <td>
            <a href="/admin/edit-cars/{{this._id}}" class="btn btn-primary">Edit</a>
            <a href="/admin/delete-cars/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are You Want To Delete {{this.name}}')">Delete</a>
          </td>
        </tr>
        {{/each}}

      </tbody>
    </table>
  </div>
</section>